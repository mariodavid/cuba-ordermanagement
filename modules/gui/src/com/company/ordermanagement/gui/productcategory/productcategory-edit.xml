<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.ordermanagement.gui.productcategory.ProductCategoryEdit"
        datasource="productCategoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.ordermanagement.gui.productcategory">
    <dsContext>
        <datasource id="productCategoryDs"
                    class="com.company.ordermanagement.entity.ProductCategory"
                    view="_local"/>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="productCategoryDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
